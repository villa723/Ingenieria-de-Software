doctype html
html(lang='es')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title AÑADIR NUEVO CURSO
    // ICONOS
    link(href='https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css' rel='stylesheet')
    // ESTILOS
    link(rel='stylesheet' href='/stylesheets/style-side-bar.css')
    link(rel='stylesheet' href='/stylesheets/style-bar.css')
    link(rel='stylesheet' href='/stylesheets/style-create.css')
  body
    nav
      h2
        | SCOOBY 
        br
        |  ATTENDANCE
      img(src='/images/logodog.png')
      #options
        ul
          li
            a(href='/panel')
              i.fa.fa-pencil-square-o(aria-hidden='true')
              p Inicio
          li
            a(href='/crearcurso')
              i.fa.fa-plus-circle(aria-hidden='true')
              p Crear Cursos
          li
            a(href='/vercursos')
              i.fa.fa-list-alt(aria-hidden='true')
              p Cursos
          li
            a(href='/login')
              i.fa.fa-sign-out(aria-hidden='true')
              p Salir
    main

      #bar
        div
          h4 CREAR NUEVO CURSO

      h1 NUEVO CURSO
      form(action='checkcrearcurso' method='post')
        .box
          label(for='codigo') Código de Curso
          input#codigo(type='text' name='codigo')
        .box
          label(for='nombre') Nombre de Curso
          input#nombre(type='text' name='nombre')
        .box
          label(for='seccion') Sección
          select#seccion(name='seccion')
            each section in sections
                option(value='#{section.SectionID}') #{section.Section_Name}
        .box
          label(for='tipo') Tipo
          select#tipo(name='tipo')
            each type in types
                option(value='#{type.TypeID}') #{type.Type_Name} 
        .box
          label(for='semestre') Semestre
          select#semestre(name='semestre')
            option(value='1') Primero
            option(value='2') Segundo
            option(value='3') Tercero
            option(value='4') Cuarto
            option(value='5') Quinto
            option(value='6') Sexto
            option(value='7') Septimo
            option(value='8') Octavo
            option(value='9') Noveno
            option(value='10') Decimo
        input(type='submit' value='Crear')